@model GreenLightSharp.Models.Show

@using (Html.BeginForm("AddBand","Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create A Show</h4>
        <hr />
        @Html.TextBoxFor(model=> model.Band)
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
